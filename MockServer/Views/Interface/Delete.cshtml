@model ApiInterfaceListItem
@{
    ViewData["Title"] = "修改API接口";
}

<div class="row">
    <div class="col">
        <form asp-action="Delete">
            <input asp-for="InterfaceId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Category" class="control-label">Category</label>
                        <input asp-for="Category" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="RequestPath" class="control-label">RequestPath</label>
                        <input asp-for="RequestPath" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Remark" class="control-label">Remark</label>
                        <input asp-for="Remark" class="form-control" readonly />
                    </div>
                </div>
            </div>
            <div class="form-group">
                Are you sure to remove API: <b>@Model.RequestPath</b> 
                <br />
                <input type="submit" value="Confirm" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


